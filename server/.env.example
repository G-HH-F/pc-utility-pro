# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (generate a secure random string)
JWT_SECRET=your-secure-jwt-secret-change-this

# Claude API Key (for proxying AI requests)
CLAUDE_API_KEY=your-claude-api-key

# Email Configuration (for magic link auth)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=PC Utility Pro <noreply@pcutilitypro.com>

# Pushover (for notifications)
PUSHOVER_USER=your-pushover-user-key
PUSHOVER_TOKEN=your-pushover-app-token

# Admin emails (comma separated) - people who can receive support requests
ADMIN_EMAILS=admin@example.com

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://pcutilitypro.com
