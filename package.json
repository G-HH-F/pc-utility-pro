{
  "name": "pc-utility-pro",
  "version": "2.4.0",
  "description": "All-in-one Windows PC utility with AI assistant, system monitoring, cleanup tools, and IT support chat",
  "main": "src/main/main.js",
  "homepage": "https://pcutilitypro.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcutilitypro/pc-utility-pro.git"
  },
  "bugs": {
    "url": "https://github.com/pcutilitypro/pc-utility-pro/issues",
    "email": "support@pcutilitypro.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:signed": "electron-builder --win --publish never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.js",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed"
  },
  "build": {
    "appId": "com.pcutilitypro.app",
    "productName": "PC Utility Pro",
    "copyright": "Copyright © 2025 PC Utility Pro",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "!src/**/*.map",
      "!**/*.md",
      "assets/**/*",
      "LICENSE",
      "config.json.example"
    ],
    "extraFiles": [
      {
        "from": "PRIVACY_POLICY.md",
        "to": "PRIVACY_POLICY.md"
      },
      {
        "from": "EULA.md",
        "to": "EULA.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "legalTrademarks": "PC Utility Pro™",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PC Utility Pro",
      "license": "EULA.md",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "installerLanguages": [
        "en_US"
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "pcutilitypro",
      "repo": "pc-utility-pro",
      "releaseType": "release"
    }
  },
  "keywords": [
    "electron",
    "pc-utility",
    "system-monitor",
    "windows",
    "cleanup",
    "ai-assistant",
    "it-support",
    "claude-ai",
    "system-optimization",
    "disk-cleanup",
    "process-manager",
    "desktop-app"
  ],
  "author": {
    "name": "PC Utility Pro",
    "email": "contact@pcutilitypro.com",
    "url": "https://pcutilitypro.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "playwright": "^1.57.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "electron-updater": "^6.1.7",
    "systeminformation": "^5.27.12",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "pushover-notifications": "^1.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
